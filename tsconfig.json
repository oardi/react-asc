{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es2017",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",
		"module": "esnext",
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
	},
	"include": [
		"src/**/*"
	]
}
